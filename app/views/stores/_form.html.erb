<div class="container">
  <div class="row">
    <div class="col-md-10 form-stores bg-light">
      <%= form_with(model: store, local: true) do |form| %>
        <% if store.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

            <ul>
            <% store.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <h3><%= form.label :name %></h3>
          <%= form.text_field :name %>
        </div>

        <div class="form-group">
          <h3><%= form.label :address %></h3>
          <%= form.text_field :address %>
        </div>

        <div class="form-group">
          <h3><%= form.label :rut%></h3>
          <%= form.text_field :rut %>
        </div>
        <div class="form-group">
          <h3><%= form.label :image %></h3>
          <%= form.text_field :image %>
          <h5><%= form.file_field :image, id: :image  %></h5>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
