<div class="row mb-5">
  <div class="container mb-5">
    <p id="notice"><%= notice %></p>


    <h1 class="text-center"><%= @store.name %></h1>
    <h4><strong>Products:</strong></h4>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @store.products.each do |product| %>
          <tr>
            <td><%= product.name.capitalize! %></td>
            <td><%= product.description.capitalize! %></td>
            <td><img class="" src="" alt=""><%= image_tag product.image.to_s %></img></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Agregar Bandeja', orders_create_path %></td>
          </tr>
          <% end %>




          <div class="card-group">
            <div class="card">
              <% @store.products.each do |product| %>
              <img class="card-img-top"><%= image_tag product.image.to_s %></img>
              <div class="card-body">
                <h5 class="card-title"><%= product.name.capitalize! %></h5>
                <p class="card-text"><%= product.description.capitalize! %></p>
                <p class="card-text"><small class="text-muted"><%= product.price %></small></p>
                <p class="card-text"><small class="text-muted"><%= link_to 'Agregar Bandeja', orders_create_path %></small></p>
                <% end %>
              </div>
            </div>
          </div>




        </tbody>
      </table>
        <%= link_to 'Edit', edit_store_path(@store), class: 'btn btn-primary' %> |
        <%= link_to 'Back', stores_path, class: 'btn btn-primary' %>|
        <%= link_to 'New Product', new_store_product_path(@store), class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
