<div style="margin: 5rem 0 0 0;">
  <h1 class="text-center text-white" style="margin: 1.5rem auto 1.5rem auto"> <%= @store.name %></h1>
  <table class="table table-hover text-center">
  <tr class="text-center">
    <th class="text-center">
      Producto
    </th>
    <th class="text-center">
      Description
    </th>
    <th class="text-center">
      Valor Unitario
    </th>
    <th class="text-center">
      Cantidad
    </th>
    <th class="text-center">
      Subtotal
    </th>
    <th class="text-center">
      Estado
    </th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.product.name %>
      </td>
      <td>
        <%= order.product.description %>
      </td>
      <td>
        <%= order.product.price %>
      </td>
      <td>
        <%= order.quantity %>
      </td>
      <td>
        <%= order.quantity * order.product.price %>
      </td>
      <td>
        <p>Entregado</p>
      </td>
  <% end %>
  </table>

</div>
