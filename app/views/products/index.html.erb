<div class="row">
  <div class="container">
    <h1>Products</h1>
    <table class="table">
      <thead class="table thead-light">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Price</th>
          <th>Store</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= image_tag product.image.to_s %></td>
            <td><%= product.price %></td>
            <td><%= product.store.name  %></td>
            <td><%= link_to 'Show', store_product_path(@store, product) %></td>
            <td><%= link_to 'Edit',edit_store_product_path(@store, product) %></td>
            <td><%= link_to 'Destroy', store_product_url(@store,product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Product', new_store_product_path %>
    <%= link_to 'Back', stores_path(@store) %>

  </div>

</div>
